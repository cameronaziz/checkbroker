<% provide(:title, 'Create Brokerage') %>
<style>
    .container {
        margin-top: 20px;
    }
</style>
<div style="margin-top: 20px; height: 100px; position: relative">
<%= image_tag 'logo-green.png', width: 200%><div style="font-size: 40px; bottom: 20px; display: inline; position: absolute;">Brokerage Registration</div>
</div>
<div class="clearfix"></div>
<div class="col-xs-6"]>
  <%= render partial: 'shared/errors', :locals => {:object => @brokerage}%>
<%= form_for @brokerage, url: {action: "create_brokerage"} do |f|  %>
    <h2>Create User</h2>
    <%= f.fields_for :users, User.new do |builder| %>
        <%= render 'users/form_elements', f: builder %>
    <% end %>
    <h2>Create Broker</h2>
      <div class="form-group">
        <%= f.label :about, class: 'sr-only'  %>
        <%= f.text_area :about, rows: 7, class: 'form-control', placeholder: 'About' %>
      </div>
      <div class="form-group">
        <%= f.label :phone, class: 'sr-only'  %>
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone Number' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'Profile Image', class: 'btn btn-primary trigger'  %>
        <%= f.file_field :image, style: 'display:none;', class: 'uploadBtn' %>
      </div>
      <div class="form-group">
        <%= f.label :address1, class: 'sr-only' %>
        <%= f.text_field :address1, class: 'form-control top-input', placeholder: 'Address' %>
        <%= f.label :address2, class: 'sr-only' %>
        <%= f.text_field :address2, class: 'form-control bottom-input', placeholder: 'Address 2'%>
      </div>
      <div class="form-group">
        <%= f.label :city, class: 'sr-only' %>
        <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
      </div>
      <div class="form-group">
        <%= f.label :state, class: 'sr-only' %>
        <%= f.select :state, options_for_select(us_states), {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :zip, class: 'sr-only' %>
        <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip' %>
      </div>
      <div class="form-group">
      <%= f.submit 'Create Brokerage', class: 'btn btn-primary' %>
    </div>

<% end %>

</div>
<div class="col-xs-4 col-xs-offset-2">
  <div style="height: 100px"></div>
  <h3>Get BrokerVerified Certified.</h3>
  <p>After you apply become a brokerage, you can apply to become BrokerVerified Certified. This makes it so that users will have more trust in your services. Get BrokerVerified Certified today!<br><br>
    <%= link_to 'Find out more.', brokerages_signup_path %>
  </p>
  <br><br>
  <h3>Advertise on BrokerVerified.</h3>
  <p>Get new clients from investors that are wary of their current investment advisor. Advertise on BrokerVerified and you can make the needed connection with one of these clients.<br><br>
    <%= link_to 'Find out more.', brokerages_signup_path %>
  </p>
</div>