<% provide(:title, 'View Portfolios') %>
<%= render partial: 'shared/notice' %>
<h1>Portfolio List</h1>
<%= link_to_button 'Create Portfolio', new_portfolio_path, 'btn-primary' %>
<table class='table'>
  <thead>
  <tr>
    <th>Name</th>
    <%= auth_group('Managers') ? '<th>User</th>'.html_safe : '' %>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.nickname %></td>
        <%= auth_group('Managers') ? '<td>'.html_safe + (link_to portfolio.user.full_name, user_path(portfolio.user)) + '</td>'.html_safe : '' %>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Delete', portfolio, method: :delete, data: {confirm: 'Are you sure?'}  %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>
