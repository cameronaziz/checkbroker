<%= render partial: 'shared/errors', :locals => {:object => @group}%>
<div class="col-md-4">
  <%= form_for @group do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'sr-only'  %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Group Name' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>