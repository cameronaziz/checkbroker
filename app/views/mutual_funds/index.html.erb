<%= render partial: 'shared/notice' %>
<h1>Mutual Fund Cache List</h1>
<table class='table'>
  <thead>
  <tr>
    <th>Mutual Fund</th>
    <th>Auto Updated at</th>
    <th>NAV</th>
    <th>Expense Ratio</th>
    <th>Load %</th>
    <th>12B-1 %</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @mutual_funds.each do |mutual_fund| %>
      <tr>
        <td><%= mutual_fund.ticker %></td>
        <td><%= mutual_fund.auto_updated.strftime('%B %-d, %Y %l:%M%p') %></td>
        <td>$<%= number_with_precision(mutual_fund.nav, precision: 2) %></td>
        <td><%= mutual_fund.expense_ratio %>%</td>
        <td><%= mutual_fund.load %>%</td>
        <td><%= mutual_fund.twelve_b_1 %>%</td>
        <td><%= link_to 'Update', update_mutual_fund_path(mutual_fund.ticker) %></td>
        <td><%= link_to 'Edit', edit_mutual_fund_path(mutual_fund) %></td>
        <td><%= link_to 'Delete', mutual_fund, method: :delete, data: {confirm: 'Are you sure?'}  %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>
